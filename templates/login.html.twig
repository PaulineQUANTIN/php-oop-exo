<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <link rel="stylesheet" href="../css/style.css">
        <title>Login</title>
    </head>
    <body>
        <div class="container-fluid mt-0">
            <div class="container">
                <div class="row m-auto">
                    <div class="col-sm p-5 mt-5 mb-5 rounded text-dark">
                        <div class="text-center foo"><img src="../img/logo.png" alt="logo"></div>
                        <form method="post" class="font-weight-bold">
                            <div class="form-group">
                                <label for="exampleInput1">Nom d'utilisateur</label>
                                <input name="login" type="text" class="form-control {% if errors.login is defined %}is-invalid{% endif %}" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{ formData.login }}">
                                {% if errors.login is defined %}
                                <div class="invalid-feedback">
                                    {{ messages.login }}
                                </div>
                                {% endif %}
                            </div>
                            <div class="form-group ">
                                <label for="exampleInputSubject1">Mot de passe</label>
                                <input name="password" type="password" class="form-control {% if errors.password is defined %}is-invalid{% endif %}" id="exampleInputPassword1" value="{{ formData.password }}">
                                {% if errors.password is defined %}
                                <div class="invalid-feedback">
                                    {{ messages.password }}
                                </div>
                                {% endif %}
                            </div>
                            <button type="submit" class="btn btn-info float-right p-3 mt-3">Se connecter</button>
                            <p class="bar text-center fixed-bottom">Photo by Mink Mingle on Unsplash</p>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    </body>
</html>